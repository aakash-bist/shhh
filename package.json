{
  "name": "shhh-anonymous-wall",
  "version": "1.0.0",
  "description": "Anonymous messaging wall where users can share thoughts, confessions, and poetry",
  "private": true,
  "type": "module",
  "dependencies": {
    "autoprefixer": "^10.4.16",
    "firebase": "^10.14.1",
    "framer-motion": "^10.16.4",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.5"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "vite": "^5.0.8"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build --outDir build",
    "preview": "vite preview",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "firebase:login": "firebase login",
    "firebase:init": "firebase init",
    "firebase:deploy": "npm run build && firebase deploy",
    "firebase:serve": "firebase serve"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
